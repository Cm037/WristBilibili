<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_toolbar_orange"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dimen_23_10"
    android:paddingEnd="@dimen/dimen_23_10">

    <TextView
        android:id="@+id/reply_toolbar_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reply_tail_toolbar_sendreply"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/tail_reply_toolbar_send"
        android:textColor="@color/toolbar_text"
        android:textSize="12sp" />

</LinearLayout>
