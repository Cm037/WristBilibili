<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.luern0313.wristbilibili.widget.ExceptionHandlerView
        android:id="@+id/popular_history_exception"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wave_swipe_refresh_view="@id/popular_history_swipe" />

    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:id="@+id/popular_history_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ListView
                android:id="@+id/popular_history_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:paddingTop="@dimen/titleHeight"
                android:paddingBottom="@dimen/dimen_22_0"/>

    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>

</RelativeLayout>